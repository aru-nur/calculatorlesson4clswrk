<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_san"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="50dp"
        android:gravity="right"
        android:paddingRight="10dp"
         />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_height="match_parent">


        <Button
            style="@style/button_func_style"
            android:text="C"
        <Button
            style="@style/button_func_style"
            android:text="+/-"/>
        <Button
            style="@style/button_func_style"
            android:text="%"/>
        <Button
            style="@style/button_func_style"
            android:text="/"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_height="match_parent">


        <Button
            android:id="@+id/btn7"
           style="@style/button_number_style"
            android:text="7"
        <Button
            android:id="@+id/btn8"
            style="@style/button_number_style"
            android:text="8"/>
        <Button
            android:id="@+id/btn9"
            style="@style/button_number_style"
            android:text="9"/>
        <Button
            android:id="@+id/btn*"
            style="@style/button_func_style"
            android:text="*"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_height="match_parent">


        <Button
            style="@style/button_number_style"
            android:text="4"
        <Button
            style="@style/button_number_style"
            android:text="5"/>
        <Button
            style="@style/button_number_style"
            android:text="6"/>
        <Button
            style="@style/button_func_style"
            android:text="-"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_height="match_parent">


        <Button
            style="@style/button_number_style"
            android:text="1"
        <Button
            style="@style/button_number_style"
            android:text="2"/>
        <Button
            style="@style/button_number_style"
            android:text="3"/>
        <Button
            style="@style/button_func_style"
            android:text="+"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_height="match_parent">


        <Button
            style="@style/button_number_style"
            android:text="0"
        <Button
            style="@style/button_number_style"
            android:text="."/>
        <Button
            style="@style/button_number_style"
            android:text=""/>
        <Button
            style="@style/button_func_style"
            android:text="="/>

    </LinearLayout>



</LinearLayout>